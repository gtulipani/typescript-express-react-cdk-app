{
  "name": "typescript-express-react-cdk-app",
  "version": "1.0.0",
  "workspaces": [
    "infra",
    "server",
    "client"
  ],
  "private": true,
  "scripts": {
    "infra:build": "yarn workspace infra build",
    "infra:synth": "yarn workspace infra synth",
    "infra:bootstrap": "yarn workspace infra bootstrap",
    "infra:deploy": "yarn workspace infra deploy",
    "server:build": "yarn workspace server build",
    "server:start": "yarn workspace server start",
    "server:start:dev": "yarn workspace server start:dev",
    "client:build": "yarn workspace client build",
    "client:start": "yarn workspace client start",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "build": "yarn workspaces run build",
    "merge": "yarn server:build && yarn client:build && mkdir -p server/dist/client && cp -r client/build/* server/dist/client/",
    "docker": "docker build -t typescript-express-react-cdk-app .",
    "start": "yarn merge && yarn server:start",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^20.4.2",
    "@types/pino": "^7.0.5",
    "aws-cdk": "^2.87.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-s3": "^1.204.0",
    "@aws-sdk/client-dynamodb": "^3.369.0",
    "@aws-sdk/util-dynamodb": "^3.369.0",
    "aws-cdk-lib": "2.87.0",
    "aws-sdk": "^2.1414.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "constructs": "^10.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^4.19.2",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.2",
    "nodemon": "^3.0.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "main": "index.js",
  "license": "MIT"
}
